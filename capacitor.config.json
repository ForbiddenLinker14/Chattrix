{
  "appId": "com.realtimechat.chat",
  "appName": "Chattrix",
  "webDir": "www",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 0
    },
    "StatusBar": {
      "backgroundColor": "#000000",
      "style": "DARK",
      "overlaysWebView": true
    },
    "App": {
      "enabled": true
    }
  },
  "android": {
    "allowMixedContent": true,
    "fullscreen": true
  }
}
